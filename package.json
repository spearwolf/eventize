{
  "name": "@spearwolf/eventize",
  "version": "2.0.4",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://github.com/spearwolf"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spearwolf/eventize.git"
  },
  "license": "Apache-2.0",
  "main": "build/eventize.umd.js",
  "module": "build/eventize.js",
  "exports": {
    "import": "./build/eventize.js",
    "require": "./build/eventize.umd.js"
  },
  "types": "build/types/index.d.ts",
  "homepage": "https://github.com/spearwolf/eventize/",
  "bugs": {
    "url": "https://github.com/spearwolf/eventize/issues"
  },
  "scripts": {
    "build:esm": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.esm.js",
    "watch:esm": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.esm.js",
    "build:umd": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.umd.js",
    "watch:umd": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.umd.js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch",
    "build": "run-s --silent build:*",
    "clean": "rimraf -r build types",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s --silent --print-label eslint:fix prettier:write",
    "test": "cross-env NODE_ENV=test jest",
    "cbt": "run-s clean build test",
    "publish:pkg": "node ./scripts/publishPackage.js"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/jest": "^28.1.7",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "child_process": "^1.0.2",
    "core-js": "^3.26.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-problems": "^6.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^14.0.0",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  }
}
