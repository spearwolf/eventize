{
  "name": "@spearwolf/eventize",
  "version": "3.0.0",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://github.com/spearwolf"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spearwolf/eventize.git"
  },
  "license": "Apache-2.0",
  "main": "dist/eventize.js",
  "module": "dist/eventize.mjs",
  "exports": {
    "import": "./dist/eventize.mjs",
    "require": "./dist/eventize.js"
  },
  "types": "types/index.d.ts",
  "homepage": "https://github.com/spearwolf/eventize/",
  "bugs": {
    "url": "https://github.com/spearwolf/eventize/issues"
  },
  "engines": {
    "node": ">=18.16"
  },
  "scripts": {
    "clean": "rimraf tmp build dist types",
    "clean:all": "npx rimraf node_modules tmp build dist types",
    "types": "tsc -b tsconfig.types.json",
    "tsup": "tsup",
    "banner:esm": "node scripts/prependBanner.mjs esm build/index.mjs dist/eventize.mjs",
    "banner:cjs": "node scripts/prependBanner.mjs cjs build/index.js dist/eventize.js",
    "bundle": "run-s tsup banner:esm banner:cjs",
    "build": "run-s bundle types",
    "prepack": "run-s clean bundle types",
    "publish:pkg": "node scripts/publishPackage.js",
    "test": "cross-env NODE_ENV=test jest",
    "watch": "cross-env NODE_ENV=test jest --watch",
    "cbt": "run-s clean build test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/sinon": "^10.0.16",
    "cross-env": "^7.0.3",
    "jest": "^29.6.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "sinon": "^15.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
