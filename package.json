{
  "name": "eventize-js",
  "version": "2.0.0-alpha.1",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://github.com/spearwolf"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spearwolf/eventize.git"
  },
  "license": "Apache-2.0",
  "main": "build/eventize.umd.js",
  "module": "build/eventize.js",
  "exports": "./build/eventize.js",
  "types": "build/types/eventize.d.ts",
  "homepage": "https://github.com/spearwolf/eventize/",
  "bugs": {
    "url": "https://github.com/spearwolf/eventize/issues"
  },
  "scripts": {
    "build:esm": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.esm.js",
    "watch:esm": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.esm.js",
    "build:umd": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.umd.js",
    "watch:umd": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.umd.js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch",
    "build": "run-s --silent build:*",
    "clean": "rimraf -r build types",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s --silent --print-label eslint:fix prettier:write",
    "test": "cross-env NODE_ENV=test jest"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^26.0.22",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "core-js": "^3.10.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-problems": "^5.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^2.7.1",
    "rollup": "^2.45.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^10.0.0",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/build/coverage",
    "coverageReporters": [
      "text",
      "json",
      "html"
    ]
  }
}
