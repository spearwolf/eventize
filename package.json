{
  "name": "@spearwolf/eventize",
  "version": "4.0.2",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://github.com/spearwolf"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spearwolf/eventize.git"
  },
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "exports": {
    "import": "./lib/index.mjs",
    "require": "./lib/index.js"
  },
  "sideEffects": false,
  "homepage": "https://github.com/spearwolf/eventize/",
  "bugs": {
    "url": "https://github.com/spearwolf/eventize/issues"
  },
  "engines": {
    "node": ">=18.16"
  },
  "scripts": {
    "update": "npx npm-check --update",
    "clean": "rimraf tmp build dist types lib",
    "clean:all": "run-s clean && rimraf node_modules",
    "build": "tsup",
    "publish:pkg": "node scripts/publishPackage.cjs",
    "test": "cross-env NODE_ENV=test jest",
    "watch": "cross-env NODE_ENV=test jest --watch",
    "checkPkgTypes": "npx attw --pack",
    "lint": "eslint",
    "format:check": "prettier --check 'src/**/*.{ts,js,json,md}'",
    "format:write": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "cbt": "run-s -sn clean build test"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@eslint/js": "^9.32.0",
    "@types/jest": "^30.0.0",
    "@types/sinon": "^17.0.4",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsup": "^8.2.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  }
}
